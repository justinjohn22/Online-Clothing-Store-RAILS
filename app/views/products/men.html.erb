<!DOCTYPE html>
<html lang="en">

<head>
    <%= stylesheet_link_tag  'collection_pages', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag '', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
    <h3> <b> MEN </b> </h3>
    <%= link_to "Filter",  filtering_path%>
    <%= link_to "Remove Filter", filterout_path, method: "delete"%>
    <div class="items-container">
        <% @products.each do |product| %>
        <div id="images-for-collection">
            <%= link_to image_tag(product.image_url, width: '150px', height: '180px', class: 'image-fit'), details_path(:id => product.id)%>
            <%= link_to  saved_items_path(:product_id => product.id), method: :post do %>
                    <%= button_to " + ", class: 'checkbox1' %>
            <% end %>

            <%= link_to  saved_items_path(:product_id => product.id), method: :post do %>
            <p><b><%= product.name %></b> <br> <%= number_to_currency(product.price) %></p>
            <% end %>
        </div>
        <% end%>
    </div>
</body>

</html>