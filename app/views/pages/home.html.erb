<!DOCTYPE html>
<html lang="en">
  <body>
    <header class="container">
      <div class="navbar-header">
        <h3>Home</h3>
      </div> 
    </header>
    
    <div>
        <%= link_to image_tag(@random_product.image_url, width: '200px', height: '200px'), saved_items_path(:product_id => @random_product.id), method: :post %>
        <%= link_to saved_items_path(:product_id => @random_product.id), method: :post do %>
        <p>Name: <%= @random_product.name %>; unit price of <%= number_to_currency(@random_product.price) %></p>
        <% end %>
        <%= button_to "+", saved_items_path(:product_id => @random_product.id), method: :post%>
    </div>
    <div>
        <h2>Popular</h2>
        <% @popular_products.each do |product| %>
        <div>
            <%= link_to image_tag(product.image_url, width: '200px', height: '200px'), saved_items_path(:product_id => product.id), method: :post %>
        </div>
        <div>
            <%= link_to  saved_items_path(:product_id => product.id), method: :post do %>
            <p>Name: <%= product.name %>; unit price of <%= number_to_currency(product.price) %></p>
            <% end %>
        </div>
        <% end%>
    </div>
    <br>
    <div>
        <%= button_to "saved list", saved_list_path(@current_saved_list), method: :get %>
    </div>
    <div>
        <h2>Collections</h2>
        <%= button_to "see all+", products_path, method: :get %>
        <%= button_to "women", '/products/women', method: :get %>
        <%= button_to "men", '/products/men', method: :get %>
        <%= button_to "kids",'/products/kids', method: :get %>
        <%= button_to "new-ins", '/products/newins', method: :get %>
    </div>

  </body>
</html>