<%= stylesheet_link_tag  'collection_pages', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= form_for(@filter) do |f| %>
    <h3>Collections</h3>
    <%= f.label :all %> 
    <%= f.check_box :all %> &nbsp;
    <%= f.label :outdoors %>
    <%= f.check_box :outdoors %> &nbsp;
    <%= f.label :underwear %>
    <%= f.check_box :underwear %> &nbsp;
    <%= f.label :formal %>
    <%= f.check_box :formal %> &nbsp;
    <%= f.label :summer %>
    <%= f.check_box :summer %> &nbsp;
    <%= f.label :indoors %>
    <%= f.check_box :indoors %> &nbsp;

    <h3>Colours</h3>
    <%= f.label :grey %>
    <%= f.check_box :grey %> &nbsp;
    <%= f.label :red %>
    <%= f.check_box :red %> &nbsp;
    <%= f.label :brown %>
    <%= f.check_box :brown %> &nbsp;
    <%= f.label :blue %>
    <%= f.check_box :blue %> &nbsp;
    <%= f.label :red %>
    <%= f.check_box :red %> &nbsp;
    <%= f.label :green %>
    <%= f.check_box :green %> &nbsp;
    <%= f.label :black %>
    <%= f.check_box :black %> &nbsp;
    <%= f.label :white %>
    <%= f.check_box :white %> &nbsp;

    <h3>Sizes</h3> 
    <%= f.label :size %><br />
    <%= f.label :size, "s", :value => "s"  %>
    <%= f.radio_button :size, "s" %>
    <%= f.label :size, "m", :value => "m"  %>
    <%= f.radio_button :size, "m" %>
    <%= f.label :size, "l", :value => "l"  %>
    <%= f.radio_button :size, "l" %>
    <%= f.label :size, "xl", :value => "xl"  %>
    <%= f.radio_button :size, "xl" %>
    <%= f.label :size, "xxl", :value => "xxl"  %>
    <%= f.radio_button :size, "xxl" %>
    <%= f.submit "Submit"%>

<% end %>